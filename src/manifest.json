{
  "name": "GitHub Notifications",
  "description" : "Shows a tooltip with your unread notifications from GitHub",

  "manifest_version": 2,

  "version": "0.20.2",
  
  "icons": { "128": "logo.png" },

  "background": "app.html",

  "browser_action": {
      "default_icon": "logo.png",
      "default_title": "GitHub Notifications"
  },

  "permissions": [
    "https://github.com/"
  ],

  "options_page": "fancy-settings/source/index.html"
}